<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pract.es.deusto.wake_up.Menu_Lateral"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/heart"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"/>
    <Button
        android:id="@+id/btn_listaPacientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Usuarios"/>

    <Button
        android:id="@+id/btn_medicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicion"/>
    <Button
        android:id="@+id/btn_Foto_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto de perfil"/>
    <Button
        android:id="@+id/btn_LLamada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamada de emergencia"/>


